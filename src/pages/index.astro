---
import { loader } from "../catalog/loader";
import Layout from "../layouts/Layout.astro";

const allCreators = await loader.getAllCreators();
// const creatorsAndProjects = CreatorsProjectSorter.sort(allCreators);

// const top12Creators = creatorsAndProjects.slice(0, 12);
---

<Layout title="Fari Community Project">
  <section class="prose lg:prose-xl">
    <h1>Creators</h1>
  </section>
  <section>
    <ul>
      {
        allCreators.map((creator) => (
          <li>
            <a href={`/creators/${creator.creatorSlug}`}>
              {creator.data?.name}
            </a>
          </li>
        ))
      }
    </ul>
  </section>
</Layout>
